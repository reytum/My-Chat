<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00AFF0"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/forgotPassword"
    android:textAlignment="center"
    tools:context="com.example.my_chat.ForgotPassword" >

    <TextView
        android:id="@+id/enterEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Enter Your Email-Id"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/resetLinkText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="A Password Reset Link will be"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:textStyle="italic" />
    
    <TextView
        android:id="@+id/resetLinkText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="sent to your Email ID"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:textStyle="italic" />

   <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:text="Email-Id*" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_borders"
        android:maxLines="1"
        android:paddingLeft="10dp" />
    
     <Button
        android:id="@+id/reset_password"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:background="#33C951"
        android:layout_gravity="right"
        android:text="RESET"
        android:textColor="#FFFFFF" />

</LinearLayout>